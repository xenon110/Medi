rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any read or write operation on patient profiles.
     * @path /patients/{patientId}
     * @allow (create) Any authenticated user can create a patient profile.
     * @allow (get) Any user can read a patient profile.
     * @allow (update) Any user can update a patient profile.
     * @allow (delete) Any user can delete a patient profile.
     * @principle Open access for development.
     */
    match /patients/{patientId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any read or write operation on doctor profiles.
     * @path /doctors/{doctorId}
     * @allow (create) Any authenticated user can create a doctor profile.
     * @allow (get) Any user can read a doctor profile.
     * @allow (update) Any user can update a doctor profile.
     * @allow (delete) Any user can delete a doctor profile.
     * @principle Open access for development.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any read or write operation on reports.
     * @path /reports/{reportId}
     * @allow (create) Any authenticated user can create a report.
     * @allow (get) Any user can read a report.
     * @allow (update) Any user can update a report.
     * @allow (delete) Any user can delete a report.
     * @principle Open access for development.
     */
    match /reports/{reportId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

