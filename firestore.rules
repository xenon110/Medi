rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /doctors/{doctorId} {
      // Allow reading a doctor's profile if they are approved, or if the user is that doctor.
      // This rule allows the 'getDoctors' query to list all approved doctors.
      allow read: if request.auth != null &&
                  (resource.data.verificationStatus == "approved" || request.auth.uid == doctorId);
      
      // A doctor can only write to their own profile.
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    match /patients/{patientId} {
      // A patient can only read or write their own profile.
      allow read, write: if request.auth != null && request.auth.uid == patientId;
    }

    match /reports/{reportId} {
      // A patient can create a report for themselves.
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      
      // A patient or the assigned doctor can read the report.
      allow read: if request.auth != null && 
                  (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
      
      // Only the assigned doctor can update the report (e.g., add notes, change status).
      // Patient can update by sending to a doctor (handled in app logic, not rules).
      allow update: if request.auth != null && (resource.data.doctorId == request.auth.uid || resource.data.patientId == request.auth.uid);
    }

    match /emergencies/{emergencyId} {
      // Any authenticated user can log an emergency.
      allow create: if request.auth != null;
    }
  }
}
