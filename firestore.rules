rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Doctors:
    // - Allow anyone authenticated to query the list of APPROVED doctors.
    // - Allow anyone authenticated to read a single doctor's profile.
    // - Only allow a doctor to write to their own profile.
    match /doctors/{doctorId} {
      allow list: if request.auth != null && request.query.get("where")[0][1] == "verificationStatus" && request.query.get("where")[0][2] == "approved";
      allow get: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Patients: Users can only read or write to their own patient document.
    match /patients/{patientId} {
      allow read, write: if request.auth != null && request.auth.uid == patientId;
    }

    // Reports: 
    // - Patients can create reports.
    // - Patients can only read their own reports.
    // - Doctors can read and update reports assigned to them.
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read: if request.auth != null && 
                  (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
      allow update: if request.auth != null && (resource.data.doctorId == request.auth.uid || resource.data.patientId == request.auth.uid);
    }

    // Emergencies: Allow any authenticated user to log an emergency.
    match /emergencies/{emergencyId} {
      allow create: if request.auth != null;
    }
  }
}
