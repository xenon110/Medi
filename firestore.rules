rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Doctors:
    // - Any authenticated user can LIST (query) and READ approved doctors.
    // - Any authenticated user can GET a single doctor's profile by ID.
    // - A doctor can only WRITE/update their own document.
    match /doctors/{doctorId} {
      allow list: if request.auth != null && request.query.get('verificationStatus') == 'approved';
      allow read: if request.auth != null && (
          // Allow reading if it's an approved doctor
          resource.data.verificationStatus == 'approved' ||
          // Allow a doctor to read their own profile regardless of status
          request.auth.uid == doctorId
      );
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Patients: Users can only read or write to their own patient document.
    match /patients/{patientId} {
      allow read, write: if request.auth != null && request.auth.uid == patientId;
    }

    // Reports: 
    // - Patients can create reports for themselves.
    // - Patients can read their own reports.
    // - Doctors can read and update reports assigned to them.
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read: if request.auth != null && 
                  (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
      allow update: if request.auth != null && 
                    (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
    }

    // Emergencies:
    // - Authenticated users can create emergency logs.
    match /emergencies/{emergencyId} {
      allow create: if request.auth != null;
    }
  }
}
