rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a doctor
    function isDoctor(userId) {
      return exists(/databases/$(database)/documents/doctors/$(userId));
    }

    // Patients can only read/write their own documents
    match /patients/{patientId} {
      allow read, write: if request.auth != null && request.auth.uid == patientId;
    }

    // Doctors can only read/write their own documents
    match /doctors/{doctorId} {
      allow read, write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Reports can be read by the patient who owns it or the assigned doctor
    // Reports can be created by the patient.
    // Reports can be updated by the assigned doctor.
    match /reports/{reportId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.doctorId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.patientId;
      allow update: if request.auth != null && isDoctor(request.auth.uid) && request.auth.uid == resource.data.doctorId;
    }

    // Chats can be read/written by the patient or doctor involved in the chat
    match /chats/{chatId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.doctorId);
    }
  }
}
