     * @allow (update) Any user can update an emergency log.
     * @allow (delete) Any user can delete an emergency log.
     * @principle Open access for development.
     */
    match /emergencies/{emergencyId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}