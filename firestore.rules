rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Doctors Collection Rules:
    // - Any authenticated user can get a list of APPROVED doctors. This is for the 'Consult a Doctor' page.
    // - Any authenticated user can read a single doctor's profile.
    // - A doctor can only create or update their own profile.
    match /doctors/{doctorId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }

    // Patients Collection Rules:
    // - A user can only read or write their own patient document.
    match /patients/{patientId} {
      allow read, write: if request.auth != null && request.auth.uid == patientId;
    }

    // Reports Collection Rules:
    // - Patients can create reports for themselves.
    // - Users can only read a report if they are the patient OR the assigned doctor.
    // - Doctors can only update reports assigned to them.
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read: if request.auth != null && 
                  (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
      allow update: if request.auth != null && resource.data.doctorId == request.auth.uid;
    }

    // Emergencies Collection Rules:
    // - Any authenticated user can create an emergency log. This allows for quick logging.
    // - Reading logs should be restricted, e.g., to admin roles (not implemented here).
    match /emergencies/{emergencyId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read, update, delete: if false; // Only admins should be able to read/delete
    }
  }
}
