
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Doctors: Can read/write their own profile. Anyone can read the list of approved doctors.
    match /doctors/{doctorId} {
      allow read: if request.auth != null && (resource.data.verificationStatus == 'approved' || request.auth.uid == doctorId);
      allow write: if request.auth.uid == doctorId;
    }

    // Patients: Can only read/write their own profile.
    match /patients/{patientId} {
      allow read, write: if request.auth.uid == patientId;
    }
    
    // Reports:
    // - Patients can create reports.
    // - Patients can read their own reports.
    // - Doctors can read/update reports assigned to them.
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid);
      allow update: if request.auth != null && resource.data.doctorId == request.auth.uid;
    }
  }
}
