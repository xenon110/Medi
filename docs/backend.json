{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Base user profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["patient", "doctor"] },
        "name": { "type": "string" },
        "age": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "gender": { "type": "string" }
      },
      "required": ["uid", "email", "role", "name", "age", "createdAt", "gender"]
    },
    "PatientProfile": {
      "title": "Patient Profile",
      "description": "Profile for a patient user.",
      "type": "object",
      "allOf": [{ "$ref": "#/entities/UserProfile" }],
      "properties": {
        "region": { "type": "string" },
        "skinTone": { "type": "string" }
      }
    },
    "DoctorProfile": {
      "title": "Doctor Profile",
      "description": "Profile for a doctor user.",
      "type": "object",
      "allOf": [{ "$ref": "#/entities/UserProfile" }],
      "properties": {
        "experience": { "type": "number" },
        "specialization": { "type": "string" },
        "verificationStatus": { "type": "string", "enum": ["pending", "approved", "rejected"] }
      }
    },
    "Report": {
      "title": "Medical Report",
      "description": "A medical report generated by the AI and reviewed by doctors.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "doctorId": { "type": "string" },
        "reportName": { "type": "string" },
        "status": { "type": "string", "enum": ["pending-patient-input", "pending-doctor-review", "doctor-approved", "doctor-modified", "rejected"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "aiReport": { "type": "object" },
        "doctorNotes": { "type": "string" }
      },
      "required": ["patientId", "reportName", "status", "createdAt", "aiReport"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/patients/{patientId}": {
      "schema": { "$ref": "#/entities/PatientProfile" },
      "description": "Stores patient user profiles."
    },
    "/doctors/{doctorId}": {
      "schema": { "$ref": "#/entities/DoctorProfile" },
      "description": "Stores doctor user profiles."
    },
    "/reports/{reportId}": {
      "schema": { "$ref": "#/entities/Report" },
      "description": "Stores all medical reports."
    },
     "/emergencies/{emergencyId}": {
      "schema": { "type": "object", "properties": { "patientId": { "type": "string" }, "timestamp": { "type": "string", "format": "date-time" } } },
      "description": "Logs emergency button clicks."
    }
  }
}
